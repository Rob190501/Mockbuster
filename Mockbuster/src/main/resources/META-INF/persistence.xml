<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="mockbusterPU" transaction-type="JTA">
        <!-- Nome del DataSource configurato nel context.xml -->
        <jta-data-source>jdbc/mockbuster</jta-data-source>
        <properties>
            <!-- ProprietÃ  opzionali per Hibernate o altre implementazioni JPA -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none" />
        </properties>
    </persistence-unit>
</persistence>
