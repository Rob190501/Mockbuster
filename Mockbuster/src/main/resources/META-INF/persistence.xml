<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="mockbusterPU" transaction-type="JTA">
        <!-- Nome del DataSource configurato nel context.xml -->
        <jta-data-source>jdbc/mockbuster</jta-data-source>
        <class>model.Movie</class>
        <class>model.Order</class>
        <class>model.RentedMovie</class>
        <class>model.PurchasedMovie</class>
        <class>model.User</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none" />
            
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <!-- Abilita i commenti SQL -->
            <property name="eclipselink.logging.sql" value="true"/>

        </properties>
    </persistence-unit>
</persistence>
